<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_20"
        android:paddingRight="@dimen/size_20">

        <TextView
            android:id="@+id/tv_address_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_30"
            android:gravity="center"
            android:padding="@dimen/size_20"
            android:text="取消"
            android:textColor="@color/color_address_pad_cancel"
            android:textSize="@dimen/font_24" />

        <TextView
            android:id="@+id/tv_address_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="户籍选择"
            android:textSize="@dimen/font_26"
            tools:textColor="@color/color_address_pad_tab" />

        <TextView
            android:id="@+id/tv_address_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_30"
            android:gravity="center"
            android:padding="@dimen/size_20"
            android:text="确定"
            android:textColor="@color/color_address_pad_confirm"
            android:textSize="@dimen/font_24" />
    </LinearLayout>

</LinearLayout>