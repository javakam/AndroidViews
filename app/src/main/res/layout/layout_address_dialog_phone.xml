<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/address_picker_dialog_phone"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_32">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_address_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_24"
            android:gravity="center"
            android:padding="@dimen/size_6"
            android:text="取消"
            android:textColor="@color/color_address_phone_cancel"
            android:textSize="@dimen/font_28" />

        <TextView
            android:id="@+id/tv_address_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="户籍选择"
            android:textColor="@color/color_address_phone_title"
            android:textSize="@dimen/font_30" />

        <TextView
            android:id="@+id/tv_address_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/size_24"
            android:gravity="center"
            android:padding="@dimen/size_6"
            android:text="确定"
            android:textColor="@color/color_address_phone_confirm"
            android:textSize="@dimen/font_28" />
    </LinearLayout>

    <com.work.dialog.addresspicker.AddressPicker
        android:id="@+id/view_address_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_40" />
</LinearLayout>