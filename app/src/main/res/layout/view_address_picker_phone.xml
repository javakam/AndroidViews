<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_58"
        app:tabBackground="@null"
        app:tabGravity="center"
        app:tabIndicatorAnimationDuration="300"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        tools:tabIndicatorColor="@color/color_address_phone_tab_picked"
        tools:tabIndicatorHeight="@dimen/size_3"
        tools:tabMode="scrollable"
        tools:tabSelectedTextColor="@color/color_address_phone_tab_picked"
        tools:tabTextAppearance="@style/TabLayoutTextAppearancePhone"
        tools:tabTextColor="@color/color_address_phone_tab" />

    <View
        android:id="@+id/view_address_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_2"
        android:background="@color/color_address_phone_line" />

    <TextView
        android:id="@+id/tv_address_hint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_56"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/size_28"
        android:textColor="@color/color_address_phone_hint"
        android:textSize="@dimen/font_22"
        tools:text="选择省份/地区" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>